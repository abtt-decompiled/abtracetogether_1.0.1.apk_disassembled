<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/primary_blue_1">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_blue_1"/>
                    <corners android:radius="10dp"/>
                    <gradient android:startColor="#0030a1" android:endColor="#0057dd" android:angle="90"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_blue_4"/>
                    <corners android:radius="10dp"/>
                    <gradient android:startColor="#0030a1" android:endColor="#0057dd" android:angle="90"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
