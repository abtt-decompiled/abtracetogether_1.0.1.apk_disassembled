<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/onboardingBackButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_arrow_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/footer" app:layout_constraintTop_toTopOf="0">
        <LinearLayout android:orientation="vertical" android:id="@+id/topLayout" android:paddingTop="64dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@+id/middleLayout" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0">
            <androidx.appcompat.widget.AppCompatTextView android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/otp_step" style="@style/StepText"/>
            <androidx.appcompat.widget.AppCompatTextView android:textStyle="bold" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/enter_otp" android:textAllCaps="true" style="@style/OnboardingTitle"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/middleLayout" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/topLayout" app:layout_constraintVertical_weight="3">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et1" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et2" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et3" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et4" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et5" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
                <EditText android:textSize="48sp" android:textColor="@color/primary_purple" android:id="@+id/otp_et6" android:layout_width="50dp" android:layout_height="wrap_content" android:maxLength="1" android:layout_weight="1" android:lineSpacingExtra="12dp" android:inputType="phone" android:imeOptions="actionGo" android:textAlignment="center"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/error" android:gravity="center" android:id="@+id/tv_error" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/bottomLayout" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="48dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/middleLayout" app:layout_constraintVertical_weight="4">
            <androidx.appcompat.widget.AppCompatTextView android:gravity="center" android:id="@+id/sent_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/otp_sent" style="@style/OnboardingDesc"/>
            <androidx.appcompat.widget.AppCompatTextView android:layout_gravity="center" android:id="@+id/timer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="@string/otp_countdown" style="@style/OnboardingDesc"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp">
                <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resend_code_label" android:paddingEnd="4dp" style="@style/OnboardingDesc"/>
                <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/secondary_teal" android:id="@+id/resendCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resend_code" android:paddingStart="4dp" style="@style/OnboardingDesc"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0">
        <include layout="@layout/button_and_progress"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
